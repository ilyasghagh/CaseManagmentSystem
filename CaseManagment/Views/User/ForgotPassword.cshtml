<section class="vh-100">
    <form asp-action="ForgotPassword" asp-controller="User">       
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <h3 class="mb-5">Password recovery</h3>
                            <div class="form-outline mb-4">
                                <input type="email" id="email" name="email" placeholder="Enter email" class = "form-control form-control-lg" required/>
                            </div>
                            <button class="btn btn-primary btn-lg btn-block" type="submit">Confirm</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>