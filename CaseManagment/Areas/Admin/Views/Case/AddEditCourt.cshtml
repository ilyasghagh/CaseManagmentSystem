@model Case.web.Areas.Admin.Models.CourtModel
<div id="main">
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>


    <div class="page-content">
        <div class="page-heading">
            <div class="page-title">
                <div class="row">
                    <div class="col-12 col-md-6 order-md-1 order-last">

                    </div>

                </div>
            </div>
            <section class="section">
                <div class="card">

                    <div class="card-body">
                        <form asp-action="AddEditCourt" asp-controller="Case" role="form">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            @if (Model.Id > 0)
                                @Html.HiddenFor(x => x.Id)



                            <div class="form-group">
                                @Html.LabelFor(m => m.CourtName, new { @class = "col-lg-8 control-label" })
                                @Html.TextBoxFor(m => m.CourtName, new { @class = "form-control", @placeholder = "Enter Name" })
                                @Html.ValidationMessageFor(m => m.CourtName, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <button type="submit" id="btnSubmit" class="btn btn-success">@(Model.Id > 0 ? "Update" : "Add")</button>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>

</div>