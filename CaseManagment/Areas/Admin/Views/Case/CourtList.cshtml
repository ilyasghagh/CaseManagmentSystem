@model IEnumerable<Case.web.Areas.Admin.Models.CourtModel>

<div id="main">
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>

    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Court List</h3>
                </div>
            </div>
        </div>

        <!-- Basic Tables start -->
        <section class="section">
            <div class="card">
                <div class="card-body">
                    <table class="table" id="table1">
                        <thead>
                            <tr>
                                <th>Court Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() > 0)
                            {
                                foreach (var item in Model)
                                {
                <tr>
                    <td>@item.CourtName</td>


                    <td>
                        @Html.ActionLink("Edit", "AddEditCourt", "Case", new { Id = item.Id }) /
                        <a href="javascript:void(0)" onclick="Delete(@item.Id)">Delete</a>
                    </td>
                </tr>
}
        }


                        </tbody>
                    </table>
                </div>
            </div>

        </section>
        <!-- Basic Tables end -->
    </div>


</div>

@section Scripts{
    <script>// Jquery Datatable
        let jquery_datatable = $("#table1").DataTable();</script>
    <script>function Delete(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Admin/Case/DeleteCourt?id=" + id;
                }
            })
        }</script>
}


